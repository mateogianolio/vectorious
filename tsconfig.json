{
  "compilerOptions": {
    "outDir": "./built",
    "target": "es5",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es5",
      "dom"
    ],
    "types": [
      "mocha",
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.bench.ts",
    "bench.ts"
  ]
}
